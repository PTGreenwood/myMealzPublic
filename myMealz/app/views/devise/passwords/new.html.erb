<div class="row" style="margin: 80px 0px">
 <div class="col-md-4 col-md-offset-4">

<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email2, "Email" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :id => "user_email2", :class => "form-control" %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Send me reset password instructions", :class => "btn signupcontent"%>
    <%= link_to "Back", :back, :class => "btn cancelbutton" %>
  </div>
<br>
<% end %>



</div>
</div>

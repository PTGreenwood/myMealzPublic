<div class="row">
  <div class="col-md-4 col-md-offset-4" style="padding:80px 0px">
<h2 style="text-align: center">Sign Up Here!</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username, :style => "color: #293135" %>
    <%= f.text_field :username, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :firstname, :style => "color: #293135" %>
    <%= f.text_field :firstname, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :lastname, :style => "color: #293135" %>
    <%= f.text_field :lastname, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :email2, "Email", :style => "color: #293135" %>
    <%= f.email_field :email, :class => "form-control", :id => "user_email2" %>
  </div>
<br>
  <div class="field">
    <%= f.label :password2, "Password", :style => "color: #293135" %>
    <% if @minimum_password_length %>
    <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", :class => "form-control", :id => "user_password2" %>
  </div>
<br>
  <div class="field">
    <%= f.label :password_confirmation, :style => "color: #293135"%>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :connectedTo,"Dietitian Reference Code (Optional)", :style => "color: #293135" %>
    <%= f.text_field :connectedTo, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :avatar, :style => "color: #293135"%>
    <%= f.file_field :avatar, :style => "color: #293135" %>
  </div>
<br>

  <div class="actions">
    <%= f.submit "Sign up", :class => "btn signupcontent" %>
    <%= link_to "Back", :back, :class => "btn cancelbutton" %>
  </div>
<br>
  <%= render "devise/shared/links" %>
</div>
</div>
<% end %>

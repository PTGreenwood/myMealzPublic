<div class="row">
  <div class="col-md-4 col-md-offset-4" style="padding-top:80px">
<h2 style="text-align: center">Oops! Something went wrong, please try again</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username, :style => "color: #293135" %>
    <%= f.text_field :username, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :first_name, :style => "color: #293135" %>
    <%= f.text_field :firstname, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :last_name, :style => "color: #293135" %>
    <%= f.text_field :lastname, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :email, :style => "color: #293135" %>
    <%= f.email_field :email, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :password, :style => "color: #293135" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :password_confirmation, :style => "color: #293135"%>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :dietitian_referral_code, :style => "color: #293135" %>
    <%= f.text_field :connectedTo, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :upload_profile_picture, :style => "color: #293135"%>
    <%= f.file_field :avatar, :style => "color: #293135" %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up", :class => "btn signupcontent" %>
  </div>
</div>
</div>
<% end %>


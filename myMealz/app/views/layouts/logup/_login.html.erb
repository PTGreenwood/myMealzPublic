<%= form_for(:user, :url => session_path(:user)) do |f| %>
  <div style="padding-top: 10px">
    <div style="float: left">
      <%= f.label :email %>
      <br>
      <%= f.text_field :email %>
      &nbsp
    </div>
    <div style="float: left">
      <%= f.label :password %>
      <br>
      <%= f.password_field :password %>
      &nbsp
      <%= f.submit 'Log in' %>
  </div>
  </div>
    <span style="float:right"><%= link_to "Forgot your password?", new_password_path(:user) %></span>

<% end %>

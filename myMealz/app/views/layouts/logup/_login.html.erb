<%= form_for(:user, :url => session_path(:user)) do |f| %>
  <div style="padding-top: 10px">
    <%= f.label :email %> &nbsp
    <%= f.text_field :email %>&nbsp
    <%= f.label :password %> &nbsp
    <%= f.password_field :password %>

    <%= f.submit 'Log in' %><br>
  </div>
    <span style="float:right"><%= link_to "Forgot your password?", new_password_path(:user) %></span>

<% end %>

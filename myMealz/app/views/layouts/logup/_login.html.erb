<%= form_for(:user, :url => session_path(:user)) do |f| %>
  <%= f.label :email %><br>
  <%= f.text_field :email %> <br>
  <%= f.label :password %><br>
  <%= f.password_field :password %> <br>
  <%= f.label :remember_me %> &nbsp
  <%= f.check_box :remember_me %><br>

  <%= f.submit 'Sign in' %><br>
  <%= link_to "Forgot your password?", new_password_path(:user) %>
<% end %>

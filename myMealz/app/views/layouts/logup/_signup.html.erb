<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username, :style => "color: white" %>
    <%= f.text_field :username, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :firstname, :style => "color: white" %>
    <%= f.text_field :firstname, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :lastname, :style => "color: white" %>
    <%= f.text_field :lastname, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :email, :style => "color: white" %>
    <%= f.email_field :email, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :password, :style => "color: white" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "off", :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :password_confirmation, :style => "color: white"%>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :dietitian_referral_code, :style => "color: white" %>
    <%= f.text_field :connectedTo, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :upload_profile_picture, :style => "color: white"%>
    <%= f.file_field :avatar, :style => "color: white" %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up", :class => "btn signupcontent" %>
  </div>
<% end %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :username, :style => "color: #293135" %>
    <%= f.text_field :username, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :firstname, :style => "color: #293135" %>
    <%= f.text_field :firstname, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :lastname, :style => "color: #293135" %>
    <%= f.text_field :lastname, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :email2, "Email", :style => "color: #293135" %>
    <%= f.email_field :email, :class => "form-control", :id => "user_email2"%>
  </div>
<br>
  <div class="field">
    <%= f.label :password2, "Password", :style => "color: #293135" %>
    <%= f.password_field :password, autocomplete: "off", :class => "form-control", :id => "user_password2" %>
  </div>
<br>
  <div class="field">
    <%= f.label :password_confirmation, :style => "color: #293135"%>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :connectedTo, :style => "color: #293135" %>
    <%= f.text_field :connectedTo, :class => "form-control" %>
  </div>
<br>
  <div class="field">
    <%= f.label :avatar, :style => "color: #293135"%>
    <%= f.file_field :avatar, :style => "color: #293135" %>
  </div>
  <div class="actions">
    <%= f.submit "Sign up", :class => "btn signupcontent" %>
  </div>
<% end %>

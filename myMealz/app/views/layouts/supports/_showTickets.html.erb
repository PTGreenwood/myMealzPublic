<% counter = 0 %>
<% @tickets.each do |item| %>
  <% if(!item.isAdminMessage) %>
    <% if(!item.isPartOfThread) %>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="container">
            <div class="row">
              <div class="col-md-4">
                TicketID:
                <%= item.id %><br>
                Status:
                <% if(item.resolved) %>
                  <%= "Resolved" %>
                <% else %>
                  <%= "Un-resolved" %>
                <%end %>
                <br>
                TicketTitle:
                <%= item.ticketTitle %><br>
                Attached to User:
                <%= item.attachedUser %><br>
                Subject:
                <%= item.subjectBody %>

              </div>

              <div class="col-md-5 align-self-end">
                <div class="btn-toolbar" role="toolbar" aria-label="EditBoxes">
                  <div class="btn-group" role="group" aria-label="Reply">
                    <% if(!item.resolved?) %>
                      <button type="button" class="btn btn-primary"
                      onclick="showReply('<%=item.id%>')">Reply</button>
                    <% else %>
                    <button type="button" class="btn btn-default">Reply</button>
                    <% end %>
                  </div>
                  <div class="btn-group" role="group" aria-label="Mark_Complete">
                    <button type="button" class="btn btn-default">Resolve</button>
                  </div>
                  <div class="btn-group" role="group" aria-label="Delete">
                    <button type="button" class="btn btn-default"
                    onclick="deleteTicket('<%=item.id%>')">Delete</button>
                  </div>
                  <div class="btn-group" role="group" aria-label="viewHistory">
                    <button type="button" class="btn btn-info"
                    onclick="getMessageHistory('<%=item.id%>')">View History </button>
                  </div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-8">
                  <div id="reply<%=item.id%>" style="display:none">
                    <p>No Content Found</p>
                  </div>
                  <div id="thread<%=item.id%>">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <% counter += 1 %>

<% end %>

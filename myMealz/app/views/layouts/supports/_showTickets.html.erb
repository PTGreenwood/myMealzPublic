<% counter = 0 %>
<% @tickets.each do |item| %>
  <div class="panel panel-default">
    <div class="panel-body">
      <div class="container">

        <div class="row">
          <div class="col-md-5">
            TicketID:
            <%= @tickets[counter].id %><br>
            TicketTitle:
            <%= @tickets[counter].ticketTitle %><br>
            Attached to User:
            <%= @tickets[counter].attachedUser %><br>
            Subject:
            <%= @tickets[counter].subjectBody %>
            <% counter += 1 %>
          </div>

          <div class="col-md-4 align-self-end">
            <div class="btn-toolbar" role="toolbar" aria-label="EidtBoxes">
              <div class="btn-group" role="group" aria-label="Reply">
                <button type="button" class="btn btn-default"
                onclick="showReply('<%=counter%>')">Reply</button>
              </div>
              <div class="btn-group" role="group" aria-label="Mark_Complete">
                <button type="button" class="btn btn-default">Mark Complete</button>
              </div>
              <div class="btn-group" role="group" aria-label="Delete">
                <button type="button" class="btn btn-default"
                onclick="deleteTicket('<%=counter%>')">Delete</button>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-8">
              <div id="reply<%=counter%>" style="display:none">
                <p>dfdjk</p>
              </div>
            </div>
          </div>
        </div>


      </div>
    </div>
  </div>

<% end %>


<div class="row">
  <br><br>
  <div class="col-md-10 col-md-offset-1 row align-items-center">
    <h1 align=center>myMealz. Meal Planning Resource</h1>
    <br><br>
  </div>
</div>

<!-- If not logged in, then will display the sign up and log in -->
	<% if current_user.nil? %>

  	<div class="col-md-12">
      <div class="row">
        <!-- ROW 1 within the row -->
        <div class="col-md-4 col-md-offset-2 row align-items-center">
          <div class="thumbnail">
            <%= image_tag ("242x200.png")%>
            <div class="caption">
              <h3 align=center>Log in</h3>
              <p align=center>Already a member, Log in</p>
              <p align=center><a href="#" class="btn btn-primary" role="button">Log in</a></p>
            </div>
          </div>
        </div>
        <div class="col-md-4 col-md-offset-0">
          <div class="thumbnail">
          	<%= image_tag ("242x200.png")%>
            <div class="caption">
              <h3 align=center>Sign up</h3>
              <p align=center>Not a member, Sign up now</p>
              <p align=center><a href="#" class="btn btn-primary" role="button">Sign up</a></p>
            </div>
          </div>
        </div>
      </div>

      <div class="row">
        <br><br>
        <div class="col-md-12 row align-items-center">
        </div>
      </div>
  	</div>
	</div>

		<%#= link_to new_user_session_path, class: 'login-button' do %><!--Not logged in, Sign in.--><%# end %>

	<% else %>
	<!-- Redirect to the profile page -->
		<script type="text/javascript">
    	window.location.href="/dashboard/<%=current_user.username %>" // put your correct path in a string here
  	</script>
	<% end %>

</div>


